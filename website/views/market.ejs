<html>
<head>
    <title>Aethermon - Market</title>
    <link rel="shortcut icon" href="/images/mini_logo.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/web3@1.3.0/dist/web3.min.js"></script> 
    <link rel="stylesheet" type="text/css" href="/stylesheets/market.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/javascript/market.js"></script>

    
</head>

<body>
  <div class="back_button_inner" onclick="go_back()"> BACK </div> 
  <script>
    //return to homepage when click "back"
        function go_back() {
          window.location.href = "/homepage";}
  </script>
     <h1>Aethermon Marketplace</h1>

     <button id="sellButton" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#sellModal">I want to sell!</button>

     <div  id="products"  class="product-container">
    
     
    </div>

    <!-- Sell Modal -->
    <div class="modal fade" id="sellModal" tabindex="-1" aria-labelledby="sellModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
            <h1 id="sellModalLabel" style="color:black;text-align: center;">Sell your AEtherMons</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h4 style="color:black;">My Aethermons</h4>
                <!-- here will be loaded the AEthermons of the user-->
                <div id="myAEthermons" class="product-container">

                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
        </div>
    </div>

    <!--Confirm modal-->
    <div class="modal" tabindex="-1" id="confirmModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title"></h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p>Are you sure??</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" id="sureBtn" class="btn btn-primary">Sure!</button>
            </div>
          </div>
        </div>
      </div>
      
      <!--error modal-->
      <div class="modal fade" id="errorModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" style="width: 250px; height: 150px;">
          <div class="modal-int" style="background-color:white;">
            <div class="modal-body" id="errorModalBody">
              
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
            </div>
          </div>
        </div>
      </div>  
  
</body>

</html>
