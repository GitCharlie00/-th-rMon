<html>
<head>
    <title>Aethermon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/web3@1.3.0/dist/web3.min.js"></script> 
    <link rel="stylesheet" type="text/css" href="/stylesheets/market.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/javascript/market.js"></script>

    
</head>

<body style=" background-image: url('sfondo.png');">
     <h1>Aethermon Marketplace</h1>

     <button id="sellButton" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#sellModal">I want to sell!</button>

     <div  id="products"  class="product-container">
    
     
    </div>

    <!-- Sell Modal -->
    <div class="modal fade" id="sellModal" tabindex="-1" aria-labelledby="sellModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
            <h1 class="modal-title fs-5" id="sellModalLabel" style="color:black;text-align: center;">Sell your AEtherMons</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5 style="color:black;">My Aethermons</h5>
                <!-- here will be loaded the AEthermons of the user-->
                <div id="myAEthermons" class="product-container">

                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
        </div>
    </div>

    <!--Confirm modal-->
    <div class="modal" tabindex="-1" id="confirmModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title"></h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p>Are you sure??</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" id="sureBtn" class="btn btn-primary">Sure!</button>
            </div>
          </div>
        </div>
      </div>
      
      
  
</body>

</html>
